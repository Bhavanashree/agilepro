					<email>customer1@gmail.com</email>
					<password>12345</password>
				</data>
			</ccg:fillForm>

			<ccg:click locator="id: loginButton" />
			<ccg:waitFor locator="xpath: //*[@id='homeTab_tab']" />
		</flow>

		<flow fromState="">
			<ccg:executeFlow flow="cust1LoginPage" />
		</flow>
	</state>


